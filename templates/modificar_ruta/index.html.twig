{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Editar Ruta{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/image-uploader.min.css')}}">


    <!-- Cargo jquery y jquery-UI-->
    <script src="{{asset('js/jquery-3.7.1.js')}}"></script>
    <script src="{{asset('js/jquery-ui.js')}}"></script>
    <link href="{{asset("css/jquery-ui.css")}}" rel="stylesheet" />
    <script src="{{asset('js/jquery.richtext.min.js')}}"></script>
    <script src="{{asset('js/image-uploader.min.js')}}"></script>

    <link href="{{asset("css/richtext.min.css")}}" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="{{asset("css/jquery-ui.structure.css")}}" rel="stylesheet" />
    <link href="{{asset("css/jquery-ui.theme.css")}}" rel="stylesheet" />

    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <script src="https://kit.fontawesome.com/91464fdedc.js" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="{{asset('css/crearRuta.css')}}">
    <script src="{{asset('js/editRuta.js')}}"></script>
{% endblock %}

{% block main %}
    <div id="modal">
        <div id="main">
            <h1>Editar Ruta</h1>
                <div id="tabs">
                    <ul>
                    <li id="tab-1-li"><a href="#tabs-1">Información</a></li>
                    <li id="tab-2-li"><a href="#tabs-2">Visitas</a></li>
                    <li id="tab-3-li"><a href="#tabs-3">Programación</a></li>
                    </ul>
                    <div id="tabs-1">
                        <label for="titulo">Titulo:</label>
                        <input type="text" name="titulo" id="inputTitulo"><br>
                        <label for="descripcion">Descripción:</label>
                        <textarea name="descripcion" id="textarea" cols="1" rows="1"></textarea>
                        <label for="subirImagen">Subir Imagen:</label>
                        <div id="input-images"></div>
                        <label for="puntoEncuentro">Punto de encuentro:</label><br>
                        <label for="x">Punto X:</label>
                        <input type="number" name="x" id="x">
                        <label for="y">Punto Y:</label>
                        <input type="number" name="y" id="y">
                        <button id="btnMapa">Mapa</button><br>
                        <label for="fecha">Fecha Inicio - Fin:</label>
                        <input type="datetime" id="fecha"><br>
                        <label for="aforo">Aforo:</label>
                        <input type="number" id="aforo">
                    </div>
                    <div id="tabs-2">
                        <div>
                            <label for="filtroLocalidad">Localidad:</label>
                            <select name="filtroLocalidad" id="selectLocalidad">
                                <option value="0">Cualquiera</option>
                                {% for localidad in localidades %}
                                    <option value="{{localidad.id}}">{{localidad}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div id="visitas-container">
                            <div class="visitas-box">
                                <ul id="visitasDisponibles">
                                    
                                </ul>
                            </div>
                            <div class="visitas-box">
                                <ul id="visitasAsignadas">
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div id="tabs-3">
                        <div>
                            <label for="fechaPr">Fecha Inicio - Fin Programación</label>
                            <input type="text" id="fechaPr">
                          </div>
                  
                          <div id="diasSemana">
                            <input type="checkbox" id="lunes" name="dia" value="L">
                            <label for="lunes">Lunes</label>
                            <input type="checkbox" id="martes" name="dia" value="M">
                            <label for="martes">Martes</label>
                            <input type="checkbox" id="miercoles" name="dia" value="X">
                            <label for="miercoles">Miércoles</label>
                            <input type="checkbox" id="jueves" name="dia" value="J">
                            <label for="jueves">Jueves</label>
                            <input type="checkbox" id="viernes" name="dia" value="V">
                            <label for="viernes">Viernes</label>
                            <input type="checkbox" id="sabado" name="dia" value="S">
                            <label for="sabado">Sábado</label>
                            <input type="checkbox" id="domingo" name="dia" value="D">
                            <label for="domingo">Domingo</label>
                          </div>
                  
                          <div id="formulario">
                            <label for="hora">Hora:</label>
                            <input type="time" id="hora" name="hora">
                            <label for="guias">Guia</label>
                  
                            <select id="guias" name="personas">
                              {% for guia in guias %}
                                    <option value="{{guia.id}}">{{guia.email}}</option>
                                {% endfor %}
                            </select>
                          </div>
                          <button id="btnAñadir">Añadir</button>
                  
                          <div id="tabla">
                            <table id="horarios" style="border:1px solid black">
                              <thead>
                                <tr>
                                  <th>Rango de Fecha</th>
                                  <th>Días</th>
                                  <th>Hora</th>
                                  <th>ID GUIA</th>
                                  <th>Acciones</th>
                                </tr>
                              </thead>
                              <tbody>
                              </tbody>
                            </table>
                          </div>
                    </div>
                </div>
                
        </div>
    </div>
    <div>
      <button id="confirmarEdit">Confirmar</button>
      <button id="cancelarEdit">Cancelar</button>
    </div>
{% endblock %}