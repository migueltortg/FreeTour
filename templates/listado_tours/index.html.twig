{% extends 'base.html.twig' %}

{% block title %}Lista Tours{% endblock %}

{% block body %}
    <style>
        main{
            margin-top:5%;
        }
    </style>
    <script>
        function reservar(idRuta) {
            window.location.href = "/reservar/" + idRuta;
        }
    </script>
    
    <main>
        <div class="album py-5 bg-body-tertiary">
            <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                
                {% for ruta in rutas %}
                    <div class="col" id="{{ruta.id}}">
                        <div class="card shadow-sm">
                            <img class="bd-placeholder-img card-img-top" src="{{ asset('fotos_rutas/' ~ ruta.foto) }}" alt="Imagen" width="100%" height="225">
                            <div class="card-body">
                                <p class="card-text">{{ruta.nombre}} <br> {{ruta.descripcion | raw}}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" onclick="reservar({{ruta.id}})" class="btn btn-sm btn-outline-secondary">Reservar</button>
                                    </div>
                                    <small class="text-body-secondary">{{ruta.visitas[0].codLocalidad.codProvincia.nombre}}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            </div>
        </div>

    </main>

    <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

{% endblock %}
